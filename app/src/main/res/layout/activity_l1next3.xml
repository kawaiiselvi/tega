<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_l1next3"
    android:background="@drawable/pic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="activity.com.tebakgambar.L1next3">

    <TextView
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#f1ceb145"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="              Selamat! \nJawaban Kamu Benar!^^"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/textView" />

    <TextView
        android:text="\nGambar apakah Ini ?"
        android:textStyle="bold"
        android:textSize="35px"
        android:textColor="#0b0b0b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/Buttona"
        android:layout_alignStart="@+id/Buttona"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/bird"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />

    <Button android:text="Burung\n Merah"
        android:textColor="#8b6300"
        android:background="#d9ca94"
        android:id="@+id/But1"
        android:layout_width="wrap_content"
        android:textSize="22px"
        android:textStyle="italic"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginBottom="54dp">
    </Button>

    <Button android:text="Burung\n Marah"
        android:textColor="#8b6300"
        android:background="#d9ca94"
        android:id="@+id/But3"
        android:layout_width="wrap_content"
        android:textSize="22px"
        android:textStyle="italic"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/But2"
        android:layout_alignBottom="@+id/But2"
        android:layout_toRightOf="@+id/But2"
        android:layout_toEndOf="@+id/But2"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp">
    </Button>

    <Button android:text="Angry\n Bird"
        android:textColor="#8b6300"
        android:background="#d9ca94"
        android:id="@+id/But2"
        android:layout_width="wrap_content"
        android:textSize="22px"
        android:textStyle="italic"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/But1"
        android:layout_alignBottom="@+id/But1"
        android:layout_centerHorizontal="true">
    </Button>

</RelativeLayout>
