<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_level1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="activity.com.tebakgambar.Level1">

    <TextView
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#f1ceb145"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LEVEL 1"
        android:textSize="35dp"
        android:textStyle="bold"
        android:id="@+id/textView" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/tukul"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button android:text="Tukul Arwana"
        android:textColor="#8b6300"
        android:background="#d9ca94"
        android:id="@+id/Buttonb"
        android:layout_width="wrap_content"
        android:textSize="25px"
        android:textStyle="italic"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/Buttona"
        android:layout_alignBottom="@+id/Buttona">
    </Button>

    <Button android:text="Wesley Snipes"
        android:textColor="#8b6300"
        android:background="#d9ca94"
        android:id="@+id/Buttona"
        android:layout_width="wrap_content"
        android:textSize="25px"
        android:textStyle="italic"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView">
    </Button>

    <Button android:text="Ichwan Arif"
        android:textColor="#8b6300"
        android:background="#d9ca94"
        android:id="@+id/Buttonc"
        android:layout_width="wrap_content"
        android:textSize="25px"
        android:textStyle="italic"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Buttonb"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView">
    </Button>

    <Button
        android:text="Next ?"
        android:textColor="#8b6300"
        android:background="#d9ca94"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/next1"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Siapakah Dia . . . ?"
        android:textStyle="bold"
        android:textSize="30px"
        android:textColor="#0b0b0b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/Buttona"
        android:layout_alignStart="@+id/Buttona"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp" />


</RelativeLayout>
