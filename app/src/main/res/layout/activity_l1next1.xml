<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_l1next1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="activity.com.tebakgambar.L1next1">

    <TextView
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#f1ceb145"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LEVEL 1"
        android:textSize="35dp"
        android:textStyle="bold"
        android:id="@+id/textView" />

    <Button android:text="Ayam"
        android:textColor="#8b6300"
        android:background="#d9ca94"
        android:id="@+id/But2"
        android:layout_width="wrap_content"
        android:textSize="25px"
        android:textStyle="italic"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/But1"
        android:layout_alignBottom="@+id/But1">
    </Button>

    <Button android:text="Itik"
        android:textColor="#8b6300"
        android:background="#d9ca94"
        android:id="@+id/But1"
        android:layout_width="wrap_content"
        android:textSize="25px"
        android:textStyle="italic"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView">
    </Button>

    <Button android:text="Burung"
        android:textColor="#8b6300"
        android:background="#d9ca94"
        android:id="@+id/But3"
        android:layout_width="wrap_content"
        android:textSize="25px"
        android:textStyle="italic"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/But2"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView">
    </Button>

    <Button
        android:text="Next ?"
        android:textColor="#8b6300"
        android:background="#d9ca94"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/next2"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Gambah apakah Ini ?"
        android:textStyle="bold"
        android:textSize="30px"
        android:textColor="#0b0b0b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/Buttona"
        android:layout_alignStart="@+id/Buttona"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/itik"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/But2" />

</RelativeLayout>
