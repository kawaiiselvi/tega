<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="activity.com.tebakgambar.Play">

    <TextView
        android:text="T e b a k G a m b a r !"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textColor="#daac9951"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textStyle="italic"
        android:id="@+id/textView7" />


    <Button android:text="Level 2"
        android:background="#d9ca94"
        android:textColor="#8b6300"
        android:id="@+id/Button02"
        android:layout_width="fill_parent"
        android:textSize="40px"
        android:textStyle="italic"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Button01"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp">
    </Button>

    <Button android:text="Level 3"
        android:background="#d9ca94"
        android:textColor="#8b6300"
        android:id="@+id/Button03"
        android:layout_width="fill_parent"
        android:textSize="40px"
        android:textStyle="italic"
        android:layout_marginTop="14dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Button02"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </Button>

    <Button android:text="Level 4"
        android:background="#d9ca94"
        android:textColor="#8b6300"
        android:id="@+id/Button04"
        android:layout_width="fill_parent"
        android:textSize="40px"
        android:textStyle="italic"
        android:layout_marginTop="13dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Button03"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </Button>

    <Button android:text="Level 5"
        android:background="#d9ca94"
        android:textColor="#8b6300"
        android:id="@+id/Button05"
        android:layout_width="fill_parent"
        android:textSize="40px"
        android:textStyle="italic"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Button04"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp">
    </Button>

    <TextView
        android:textColor="#f1f4d560"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="T E G A !"
        android:textSize="75dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView9" />

    <TextView
        android:text="Silahkan Pilih Level nya! ^^"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="italic"
        android:layout_marginTop="11dp"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <Button android:text="Level 1"
        android:textColor="#8b6300"
        android:background="#d9ca94"
        android:id="@+id/Button01"
        android:layout_width="fill_parent"
        android:textSize="40px"
        android:textStyle="italic"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </Button>

    <ImageButton
        android:background="@drawable/rmh"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:id="@+id/home"
        android:layout_below="@+id/Button05"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Home ->  "
        android:textColor="#000000"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_below="@+id/Button05"
        android:layout_toLeftOf="@+id/home"
        android:layout_toStartOf="@+id/home"
        android:layout_marginTop="11dp" />

</RelativeLayout>
