<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="activity.com.tebakgambar.Play">

    <TextView
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#f1f4d560"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="T E G A !"
        android:textSize="75dp"
        android:textStyle="bold"/>

    <TextView
        android:text="T e b a k G a m b a r !"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textColor="#daac9951"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textStyle="italic"/>

    <TextView
        android:text="Silahkan Pilih Level nya! ^^"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="italic"/>


    <Button android:text="Level 1"
        android:textColor="#8b6300"
        android:background="#d9ca94"
        android:id="@+id/Button01"
        android:layout_width="fill_parent"
        android:textSize="40px"
        android:textStyle="italic"
        android:layout_marginTop="220dp"
        android:layout_height="wrap_content">
    </Button>

    <Button android:text="Level 2"
        android:background="#d9ca94"
        android:textColor="#8b6300"
        android:id="@+id/Button02"
        android:layout_width="fill_parent"
        android:textSize="40px"
        android:textStyle="italic"
        android:layout_marginTop="270dp"
        android:layout_height="wrap_content">
    </Button>

    <Button android:text="Level 3"
        android:background="#d9ca94"
        android:textColor="#8b6300"
        android:id="@+id/Button03"
        android:layout_width="fill_parent"
        android:textSize="40px"
        android:textStyle="italic"
        android:layout_marginTop="320dp"
        android:layout_height="wrap_content">
    </Button>

    <Button android:text="Level 4"
        android:background="#d9ca94"
        android:textColor="#8b6300"
        android:id="@+id/Button04"
        android:layout_width="fill_parent"
        android:textSize="40px"
        android:textStyle="italic"
        android:layout_marginTop="370dp"
        android:layout_height="wrap_content">
    </Button>

    <Button android:text="Level 5"
        android:background="#d9ca94"
        android:textColor="#8b6300"
        android:id="@+id/Button05"
        android:layout_width="fill_parent"
        android:textSize="40px"
        android:textStyle="italic"
        android:layout_marginTop="420dp"
        android:layout_height="wrap_content">
    </Button>

</RelativeLayout>
