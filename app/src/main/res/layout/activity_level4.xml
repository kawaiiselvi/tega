<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_level4"
    android:background="@drawable/pic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="activity.com.tebakgambar.Level4">

    <TextView
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#f1ceb145"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LEVEL 4"
        android:textSize="35dp"
        android:textStyle="bold"
        android:id="@+id/textView" />

    <Button android:text="Bayu \nHendriansyah"
        android:textColor="#8b6300"
        android:background="#d9ca94"
        android:id="@+id/Buttonccc"
        android:layout_width="wrap_content"
        android:textSize="20px"
        android:textStyle="italic"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Buttonbbb"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView">
    </Button>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/bean"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="\nGambar Siapakah Ini ?"
        android:textStyle="bold"
        android:textSize="35px"
        android:textColor="#0b0b0b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignLeft="@+id/Buttona"
        android:layout_alignStart="@+id/Buttona"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_below="@+id/textView" />

    <Button android:text="Mr \nBean"
        android:textColor="#8b6300"
        android:background="#d9ca94"
        android:id="@+id/Buttonbbb"
        android:layout_width="wrap_content"
        android:textSize="20px"
        android:textStyle="italic"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Buttonaaa"
        android:layout_alignBottom="@+id/Buttonaaa"
        android:layout_centerHorizontal="true">
    </Button>

    <Button android:text="Rowan \nAtkinson"
        android:textColor="#8b6300"
        android:background="#d9ca94"
        android:id="@+id/Buttonaaa"
        android:layout_width="wrap_content"
        android:textSize="20px"
        android:textStyle="italic"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView"
        android:layout_marginTop="53dp">
    </Button>

</RelativeLayout>
