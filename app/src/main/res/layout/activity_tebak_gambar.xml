<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_tebak_gambar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pic"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="activity.com.tebakgambar.TebakGambar">

    <TextView
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#f1f4d560"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="T E G A !"
        android:textSize="65dp"
        android:textStyle="bold"
        android:id="@+id/textView3" />

    <TextView
        android:text="T e b a k G a m b a r !"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textColor="#daac9951"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="italic"
        android:id="@+id/textView4" />

    <ImageButton
        android:background="@drawable/logo"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:id="@+id/smk"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <ImageButton
        android:background="@drawable/info"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:id="@+id/info"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/textView4"
        android:layout_toStartOf="@+id/textView4" />

    <Button
        android:textStyle="italic"
        android:textColor="#8b6300"
        android:background="#d8d9ca94"
        android:layout_width="38dp"
        android:layout_height="wrap_content"
        android:text="ON"
        android:id="@+id/btnON"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:layout_alignBaseline="@+id/btnOFF"
        android:layout_alignBottom="@+id/btnOFF"
        android:layout_toLeftOf="@+id/btnOFF"
        android:layout_toStartOf="@+id/btnOFF" />

    <Button
        android:textSize="20px"
        android:textStyle="italic"
        android:textColor="#8b6300"
        android:background="#d8d9ca94"
        android:text="Tombol Ajaib"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/Ajaib" />

    <Button
        android:textStyle="italic"
        android:textColor="#8b6300"
        android:background="#d8d9ca94"
        android:layout_width="38dp"
        android:layout_height="wrap_content"
        android:text="OFF"
        android:id="@+id/btnOFF"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/smk"
        android:layout_alignRight="@+id/Ajaib"
        android:layout_alignEnd="@+id/Ajaib" />

    <Button android:text="Mulai"
        android:textColor="#8b6300"
        android:background="#d8d9ca94"
        android:id="@+id/Button1"
        android:layout_width="fill_parent"
        android:textSize="40px"
        android:textStyle="italic"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnON"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp">
    </Button>


</RelativeLayout>
